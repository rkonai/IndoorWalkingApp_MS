<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cmsc436.msproject.walkingTest.indoor.CalibrateStep">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <TextView
        android:id="@+id/distanceWalkedTextView"
        android:layout_below="@+id/my_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:paddingTop="16dp"
        android:text="Enter Distance Walked: "
        android:textSize="24sp"
       />

    <TextView
        android:id="@+id/stepsTakenTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/distanceWalkedTextView"
        android:layout_marginTop="40dp"
        android:text="Enter Steps Taken: "
        android:textSize="24sp"
       />

    <EditText
        android:id="@+id/distanceWalkedValText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:text=""
        android:layout_toEndOf="@+id/distanceWalkedTextView"
        android:layout_above="@+id/stepsTakenTextView" />

    <EditText
        android:id="@+id/stepsTakenValText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/stepsTakenTextView"
        android:layout_alignStart="@+id/distanceWalkedValText"
        android:text="" />

    <Button
        android:id="@+id/finishBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/stepsTakenTextView"
        android:layout_marginTop="36dp"
        android:onClick="finishedPressed"
        android:text="Finished"
        android:textSize="24sp"
        android:textStyle="bold" />


</RelativeLayout>
